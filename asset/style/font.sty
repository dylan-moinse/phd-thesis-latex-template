%% =====================================
%% ENGINE DETECTION
%% =====================================
%% Description: Check which LaTeX engine is being used
%% Different engines have different font capabilities

\ifluatex
  %% =====================================
  %% LUALATEX CONFIGURATION (Recommended)
  %% =====================================
  %% Description: Modern engine with full Unicode support
  %% Advantages:
  %% - Native support for TrueType/OpenType fonts
  %% - Full Unicode character support
  %% - Advanced font features (ligatures, old-style numerals, etc.)
  
  %% fontspec: Package for font selection in LuaLaTeX/XeLaTeX
  %% Provides:
  %% - \setmainfont{}: Set main document font
  %% - \setsansfont{}: Set sans-serif font
  %% - \setmonofont{}: Set monospace font
  %% - Font features: Ligatures, numbers style, variants
  \RequirePackage{fontspec}
  
  %% =====================================
  %% FONT SELECTION OPTIONS
  %% =====================================
  %% Description: Multiple font options for different styles
  %% Uncomment your preferred option or define custom font
  
  %% OPTION 1: Verdana
  %% Description: Clear, professional sans-serif font
  %% Pros: Excellent screen readability, modern look
  %% Cons: Less formal than serif fonts
  %% Use for: Technical theses, modern presentations
  %% 
  %% Font files location: .font/ (relative to main.tex)
  %% Required files:
  %% - verdana.ttf (Regular)
  %% - verdana-bold.ttf (Bold)
  %% - verdana-italic.ttf (Italic)
  %% - verdana-bold-italic.ttf (Bold Italic)
  
  \setmainfont{verdana}[
    Path=asset/style/fonts/, % Font directory (adjust if needed)
    BoldFont={verdana-bold.ttf}, % Bold variant
    ItalicFont={verdana-italic.ttf}, % Italic variant
    BoldItalicFont={verdana-bold-italic.ttf}, % Bold+Italic variant
    Extension = .ttf, % File extension
    Ligatures=TeX,
    FakeSmallCaps = true
  ]

%% =====================================
%% SMALL CAPS FIX
%% =====================================
%% Verdana has no small caps
%%
\makeatletter
\AtBeginDocument{
  % Verdana does not provide a TU small-caps shape
  \DeclareRobustCommand{\textsc}[1]{\MakeUppercase{#1}}
  \DeclareRobustCommand{\scshape}{\upshape}
}
\makeatother

\else
  %% =====================================
  %% PDFLATEX CONFIGURATION (Legacy)
  %% =====================================
  %% Description: Traditional LaTeX engine
  %% Limitations:
  %% - Limited font support (mainly Type 1 fonts)
  %% - No direct TrueType/OpenType support
  %% - Limited Unicode support
  %% 
  %% Note: Consider switching to LuaLaTeX for better font support
  
  %% Latin Modern: Default high-quality font for PDFLaTeX
  %% Description: Modern Computer Modern (LaTeX default)
  %% Pros: Excellent quality, traditional LaTeX look
  %% Cons: Very recognizable as "LaTeX default"
  \RequirePackage{lmodern}

\fi

