%% =====================================
%% COLORED CITATION COMMANDS
%% =====================================
%% Description: Automatic blue color for full citations

%% Save original biblatex commands before redefining
\let\originaltextcite\textcite
\let\originalautocite\autocite
\let\originalautocites\autocites

%% \textcite
%% Format: Author (Year) or Author (Year, page)
%% The command preserves all original biblatex functionality
\renewcommand{\textcite}[2][]{%
  \textcolor{customizedcolor}{%
    \ifx&#1&%
      % No optional argument (no page number)
      \originaltextcite{#2}%
    \else%
      % With optional argument (page number)
      \originaltextcite[#1]{#2}%
    \fi%
  }%
}

%% \autocite
%% Format: (Author Year) or (Author Year, page)
%% The command preserves all original biblatex functionality
\renewcommand{\autocite}[2][]{%
  \textcolor{customizedcolor}{%
    \ifx&#1&%
      % No optional argument
      \originalautocite{#2}%
    \else%
      % With optional argument
      \originalautocite[#1]{#2}%
    \fi%
  }%
}

%% \autocites
%% Format: (Author1 Year1; Author2 Year2; ...)
%% Using manually \textcolor{customizedcolor}{\autocites[page1]{key1}[page2]{key2}}

